chai = require 'chai'
sinon = require 'sinon'
chai.use require 'sinon-chai'

expect = chai.expect

describe 'google-translate', ->
  beforeEach ->
    @bot =
      respond: sinon.spy()
      hear: sinon.spy()

    require('../src/google-translate')(@bot)

  it 'registers a respond listener', ->
    expect(@bot.respond).to.have.been.calledWith(/hello/)

  it 'registers a hear listener', ->
    expect(@bot.hear).to.have.been.calledWith(/orly/)
