# Description:
#   Who's turn to do something?
#
# Dependencies:
#   None
#
# Configuration:
#   None
#
# Commands:
#   mubot who <does something>? - Returns who does !
#
# Author:
#   KuiKui

module.exports = (bot) ->
  bot.respond /(who|qui) (.+)\?/i, (msg) ->
    users = []
    for own key, user of bot.brain.users
      users.push "#{user.name}" if "#{user.name}" != bot.name
    msg.send (msg.random users).split(" ")[0] + " " + msg.match[2] + "!"
