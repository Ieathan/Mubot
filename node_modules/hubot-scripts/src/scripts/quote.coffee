# Description:
#   Display a random quote or one from a specific person
#
# Dependencies:
#   None
#
# Configuration:
#   MUBOT_QUOTE_MAX_LINES
#
# Commands:
#   imubot enlighten - random quote
#   imubot quote - random quote
#   imubot quote from <person> - quote from person
#
# Author:
#   cldwalker

module.exports = (bot) ->
  bot.respond /enlighten|quote from (.*)|quote/i, (msg) ->
    params = {max_lines: process.env.MUBOT_QUOTE_MAX_LINES || '4'}
    if msg.match[1]
      params['source'] = msg.match[1].split(/\s+/).join('+')

    msg.http('http://www.iheartquotes.com/api/v1/random')
      .query(params)
      .get() (err, res, body) ->
        body = body.replace(/\s*\[\w+\]\s*http:\/\/iheartquotes.*\s*$/m, '')
        body = body.replace(/&quot;/g, "'")
        msg.send body
