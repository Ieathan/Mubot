# Description:
#   Rajinikanth is Chuck Norris of India, witness his awesomeness.
#
# Dependencies:
#   "cheerio": "0.7.0"
#
# Configuration:
#   None
#
# Commands:
#   mubot rajinikanth|rajini -- random Rajinikanth awesomeness
#   mubot rajinikanth|rajini me <user> -- let's see how <user> would do as Rajinikanth
#
# Author:
#   juzerali

cheerio = require('cheerio')
url = "http://rajinikanthfacts.com/"

module.exports = (bot) ->
  bot.respond /(?:rajinikanth|rajini)(?: me)? ?(.*)/i, (msg)->
    user = msg.match[1]
    msg.http(url)
      .get() (err, res, body) ->
        if err
          msg.send "Rajinikanth says: #{err}"
        else
          $ = cheerio.load(body)
          fact = $(".fact").find(".ftext").text()

          if !!user
            fact = fact.replace /raji?ni(kanth?)?/ig, user
          msg.send fact
