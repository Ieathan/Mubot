# Description:
#   Dev excuses scraper. From http://developerexcuses.com/
#
# Dependencies:
#
#   "cheerio": "~0.12.0"
#
# Commands:
#   mubot excuse me

cheerio = require 'cheerio'

module.exports = (bot) ->
  bot.respond /excuse me/i, (msg) ->
    bot.http("http://developerexcuses.com/")
      .get() (err, res, body) ->
        $ = cheerio.load(body)

        msg.send $('.wrapper a').text()
