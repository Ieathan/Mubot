# Description:
#   Displays a random pizza gif from animatedpizzagifs.com
#
# Dependencies:
#   "tumblrbot": "0.1.0"
#
# Configuration:
#   MUBOT_TUMBLR_API_KEY - A Tumblr OAuth Consumer Key will work fine
#   MUBOT_MORE_PIZZA - Show pizza whenever anyone mentions it (default: false)
#
# Commands:
#   hubot pizza - Show a pizza gif
#
# Author:
#   iangreenleaf

tumblr = require 'tumblrbot'
PIZZA = "pizzagifs.tumblr.com"

module.exports = (bot) ->
  func = if process.env.MUBOT_MORE_PIZZA then 'hear' else 'respond'
  bot[func](/pizza/i, (msg) ->
    tumblr.photos(PIZZA).random (post) ->
      msg.send post.photos[0].original_size.url
  )
