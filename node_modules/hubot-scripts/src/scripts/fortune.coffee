# Description:
#   Get a fortune
#
# Dependencies:
#   None
#
# Configuration:
#   None
#
# Commands:
#   imubot fortune me - Displays a super true fortune
#
# Author:
#   mrtazz

module.exports = (bot) ->
  bot.respond /(fortune)( me)?/i, (msg) ->
    msg.http('http://www.fortunefortoday.com/getfortuneonly.php')
       .get() (err, res, body) ->
         msg.reply body
