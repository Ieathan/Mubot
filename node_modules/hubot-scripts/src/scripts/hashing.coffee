# Description:
#   Various hashing algorithms.
#
# Dependencies:
#   None
#
# Configuration:
#   None
#
# Commands:
#   imubot md5|sha|sha1|sha256|sha512|rmd160 me <string> - Generate hash of <string>
#
# Author:
#   jimeh

crypto = require 'crypto'

module.exports = (bot) ->
  bot.respond /md5( me)? (.*)/i, (msg) ->
    msg.send hexDigest(msg.match[2], 'md5')

  bot.respond /SHA( me)? (.*)/i, (msg) ->
    msg.send hexDigest(msg.match[2], 'sha')

  bot.respond /SHA1( me)? (.*)/i, (msg) ->
    msg.send hexDigest(msg.match[2], 'sha1')

  bot.respond /SHA256( me)? (.*)/i, (msg) ->
    msg.send hexDigest(msg.match[2], 'sha256')

  bot.respond /SHA512( me)? (.*)/i, (msg) ->
    msg.send hexDigest(msg.match[2], 'sha512')

  bot.respond /RMD160( me)? (.*)/i, (msg) ->
    msg.send hexDigest(msg.match[2], 'rmd160')

# hex digest helper
hexDigest = (str, algo) ->
  crypto.createHash(algo).update(str, 'utf8').digest('hex')
