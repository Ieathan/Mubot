# Description:
#   Allows imubot to get the link to a Python 2 or 3 libaray.
#
# Dependencies:
#   None
#
# Commands:
#   imubot python(2|3) library <name> - Gets the url of the named library if it exists.
#
# Author:
#   Bryce Verdier (btv)

module.exports = (bot) ->
  bot.respond /python(2|3) library (.*)/i, (msg) ->
      matches = msg.match
      libraryMe bot, matches[1], matches[2], (text) ->
          msg.send text

libraryMe = (bot, version, lib, callback) ->
    url = "http://docs.python.org/#{version}/library/#{lib}.html"
    bot.http(url)
         .get() (err,res,body) ->
             if res.statusCode != 200
                 callback "MERP! The library #{lib} does not exist!"
             else
                 callback url

